
{
  "rules": {
    "projectManager": {
      "$uid": {
        ".read": "request.auth != null && request.auth.uid == $uid",
        ".write": "request.auth != null && request.auth.uid == $uid"
      }
    },
    "projects": {
      "$projectId": {
        ".read": "request.auth != null && get(/databases/$(database)/documents/projects/$(projectId)).data.projectManagerId == request.auth.uid",
        ".write": "request.auth != null && request.auth.uid == request.resource.data.projectManagerId"
      }
    },
    "companies": {
      "$companyId": {
        ".read": "request.auth != null && get(/databases/$(database)/documents/companies/$(companyId)).data.ownerId == request.auth.uid",
        ".write": "request.auth != null && request.auth.uid == request.resource.data.ownerId"
      }
    }
  }
}

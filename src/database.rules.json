
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Los perfiles de usuario solo son legibles y escribibles por el propio usuario.
    match /projectManagers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Los datos de las empresas son legibles por los usuarios que pertenecen a ellas.
    match /companies/{companyId} {
      // El usuario puede leer si su `uid` existe en un documento de `projectManagers` 
      // y si el `companyId` que intenta leer está en el array `companyIds` de su perfil.
      allow read: if request.auth != null 
                  && companyId in get(/databases/$(database)/documents/projectManagers/$(request.auth.uid)).data.companyIds;
      
      // La escritura/modificación se deja restringida por ahora. 
      // Se podría permitir al 'ownerId' o a un admin.
      allow write: if false;
    }

    // Los proyectos son legibles por los usuarios que pertenecen a la empresa del proyecto.
    match /projects/{projectId} {
      // El usuario puede leer si tiene acceso a la compañía del proyecto.
      // `resource.data.companyId` accede al campo 'companyId' del documento de proyecto que se está intentando leer.
      allow read: if request.auth != null 
                  && resource.data.companyId in get(/databases/$(database)/documents/projectManagers/$(request.auth.uid)).data.companyIds;

      // La creación de un proyecto se permite si el usuario está autenticado, 
      // es el dueño del proyecto y pertenece a la compañía del proyecto.
      allow create: if request.auth != null 
                    && request.resource.data.projectManagerId == request.auth.uid
                    && request.resource.data.companyId in get(/databases/$(database)/documents/projectManagers/$(request.auth.uid)).data.companyIds;
      
      // La actualización y eliminación se dejan restringidas por ahora.
      allow update, delete: if false;
    }
  }
}

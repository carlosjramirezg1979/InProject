
{
  "rules": {
    "projectManagers": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "projects": {
      ".indexOn": ["projectManagerId"],
      "$projectId": {
        ".read": "auth != null && resource.data.projectManagerId == auth.uid",
        ".write": "auth != null && resource.data.projectManagerId == auth.uid"
      }
    },
    "companies": {
       ".indexOn": ["ownerId"],
      "$companyId": {
        ".read": "auth != null && resource.data.ownerId == auth.uid",
        ".write": "auth != null && resource.data.ownerId == auth.uid"
      }
    }
  }
}

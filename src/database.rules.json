
{
  "rules": {
    ".read": false,
    ".write": false,
    "projectManagers": {
      "$uid": {
        ".read": "request.auth != null && request.auth.uid == $uid",
        ".write": "request.auth != null && request.auth.uid == $uid"
      }
    },
    "projects": {
      "$projectId": {
        ".read": "request.auth != null && resource.data.projectManagerId == request.auth.uid",
        ".write": "request.auth != null && resource.data.projectManagerId == request.auth.uid"
      }
    },
    "companies": {
       "$companyId": {
        ".read": "request.auth != null && resource.data.ownerId == request.auth.uid",
        ".write": "request.auth != null && resource.data.ownerId == request.auth.uid"
      }
    }
  }
}

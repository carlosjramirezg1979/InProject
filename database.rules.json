
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Los usuarios pueden leer y actualizar su propio perfil.
    match /projectManagers/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Cualquiera puede crear una empresa si está autenticado.
    // La lectura se permite si el ID de la empresa está en la lista del perfil del usuario.
    match /companies/{companyId} {
      allow read: if request.auth != null && companyId in get(/databases/$(database)/documents/projectManagers/$(request.auth.uid)).data.companyIds;
      allow create: if request.auth != null;
      allow update, delete: if false; // Por ahora se deshabilita la edición directa
    }

    // Un usuario autenticado puede crear proyectos.
    // Puede leer y actualizar un proyecto si es el gestor de ese proyecto.
    match /projects/{projectId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/projects/$(projectId)).data.projectManagerId == request.auth.uid;
      allow delete: if false;
    }
  }
}
